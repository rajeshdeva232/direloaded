<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_launch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cog.Dropinn.both.UI.WelcomeActivity">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/account_background"
            android:elevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/back_arrow_size"
                    android:layout_height="@dimen/back_arrow_size"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/back_arrow_start"
                    android:background="@drawable/back_arrow_black"
                    app:srcCompat="@drawable/back_arrow_black" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_settings"
            android:layout_marginEnd="@dimen/back_arrow_start"
            android:layout_marginStart="@dimen/back_arrow_start"
            android:layout_marginTop="58dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPlace_What_Kind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="start"
                    android:text="What Kind of Place are you Listing?"
                    android:textColor="@color/appColor"
                    android:textSize="28sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guestHave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGuest_Have"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="what will guest have ?"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edGuest_Have"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:elevation="5sp"
                    android:inputType="text"
                    android:maxLength="60"
                    android:textCursorDrawable="@drawable/edittext_cursor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PropertyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPropertyType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="what will guest have ?"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edPropertyType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:elevation="5sp"
                    android:inputType="text"
                    android:maxLength="60"
                    android:textCursorDrawable="@drawable/edittext_cursor" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>