<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/back_arrow_start"
            android:layout_marginStart="@dimen/back_arrow_start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Calendar"
                android:textColor="@color/appColor"
                android:textSize="30sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvWhen_you_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCalendar"
                android:layout_marginTop="20dp"
                android:text="@string/when_you_publish_a_listing_you_ll_be_able_to_see_and_edit_your_calendar_here"
                android:textColor="@color/colorDarkBlack"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>