<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".both.SignInSignUp.Login">

        <LinearLayout
            android:id="@+id/imageBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="@dimen/back_arrow_top"
                    android:layout_marginTop="@dimen/back_arrow_start"
                    app:srcCompat="@drawable/back_arrow" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/back_arrow_top"
                    android:layout_marginTop="@dimen/back_arrow_start"
                    app:srcCompat="@drawable/edit_button" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivUserImage"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:elevation="5sp"
                android:scaleType="fitXY"
                android:src="@drawable/man"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageBar"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageBar"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/colorLightBlack"
                    android:padding="5sp"
                    android:text="Name"
                    android:textSize="@dimen/settingsTextSize" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13sp"
                    android:layout_marginEnd="15sp"
                    android:textColor="@color/colorTextColorBlack"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:editable="false"
                    android:hint="enter Name"
                    android:text="Steven"
                    android:textSize="@dimen/settingsInnerTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageBar"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/colorLightBlack"
                    android:padding="5sp"
                    android:text="Gender"
                    android:textSize="@dimen/settingsTextSize" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/tvGenderSelect"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorTextColorBlack"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginStart="2sp"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:editable="false"
                    android:hint="select Gender"
                    android:text="MALE"
                    android:textSize="@dimen/settingsInnerTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageBar"
                android:clickable="false"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightBlack"
                    android:layout_marginTop="10sp"
                    android:padding="5sp"
                    android:text="Date of Birth"
                    android:textSize="@dimen/settingsTextSize" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/tvDobSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextColorBlack"
                    android:layout_marginBottom="13sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginStart="3sp"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:editable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:text="08/11/1992"
                    android:hint="00/00/XXXX"
                    android:textSize="@dimen/settingsInnerTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageBar"
                android:textColor="@color/colorLightBlack"
                android:clickable="false"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/colorLightBlack"
                    android:padding="5sp"
                    android:text="Email"
                    android:textSize="@dimen/settingsTextSize" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13sp"
                    android:layout_marginEnd="15sp"
                    android:focusable="false"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:textColor="@color/colorTextColorBlack"
                    android:editable="false"
                    android:hint="enter Email"
                    android:text="Steven@email.com"
                    android:textSize="@dimen/settingsInnerTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorLightBlack"
                android:clickable="false"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:text="Place"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/settingsTextSize" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13sp"
                    android:layout_marginEnd="15sp"
                    android:textColor="@color/colorTextColorBlack"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="3B,Washington DC..."
                    android:inputType="text"
                    android:singleLine="true"
                    android:text="Chennai,India"
                    android:textSize="@dimen/settingsInnerTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Place"
                android:clickable="false"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightBlack"
                    android:padding="5sp"
                    android:text="Description"
                    android:textSize="@dimen/settingsTextSize" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextColorBlack"
                    android:layout_marginEnd="15sp"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:editable="false"
                    android:gravity="start"
                    android:focusable="false"
                    android:hint="enter Description"
                    android:inputType="textMultiLine"
                    android:text="Dropinn is an Company which hosts an online marketplace and hospitality service for lease or rent"
                    android:textSize="@dimen/settingsInnerTextSize" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/SpokenLanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Description"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvSpokenLanguages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightBlack"
                    android:layout_marginBottom="8sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10sp"
                    android:text="Spoken Languages"
                    android:textSize="@dimen/settingsTextSize" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edSpokenLanguages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginStart="-1dp"
                    android:textColor="@color/colorTextColorBlack"
                    android:backgroundTint="@color/colorDarkBlack"
                    android:editable="false"
                    android:inputType="text"
                    android:singleLine="true"
                    android:focusable="false"
                    android:text="English, Tamil, Kannada, Hindi, Arabic"
                    android:textSize="@dimen/settingsInnerTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/SpokenLanguages" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>